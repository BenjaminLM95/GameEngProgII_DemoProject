.pauseButton {
    background-size: 100% 100%;
    width: 50%;
    align-self: center;
    -unity-font-definition: resource('FlatSkin/Font/Roboto-BlackItalic');
    font-size: 24px;
    background-color: rgba(0, 0, 0, 0);
    -unity-text-outline-color: rgba(0, 0, 0, 0);
    margin-top: 15px;
    margin-bottom: 15px;
}

.pauseButton:hover {
    font-size: 24px;
    align-self: center;
    background-color: rgba(0, 0, 0, 0);
    color: rgb(223, 160, 15);
}
